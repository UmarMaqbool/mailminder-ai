{
  "manifest_version": 3,
  "name": "Mail Minder",
  "description": "A Chrome extension that enables users to reply to their emails using different tones.",
  "version": "1.0.0",
  "permissions": ["activeTab", "scripting", "tabs", "identity", "storage"],
  "icons": {
    "16": "icons/icon.jpeg",
    "48": "icons/icon.jpeg",
    "128": "icons/icon.jpeg"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Mail Minder",
    "default_icon": {
      "16": "icons/icon.jpeg",
      "48": "icons/icon.jpeg",
      "128": "icons/icon.jpeg"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "oauth2": {
    "client_id": "666213716118-v5gmu4jrrbqsrln11kc61002up55teir.apps.googleusercontent.com",
    "scopes": [
      "https://mail.google.com/",
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/gmail.compose",
      "https://www.googleapis.com/auth/gmail.modify",
      "https://www.googleapis.com/auth/gmail.metadata",
      "https://www.googleapis.com/auth/contacts.readonly",
      "https://www.googleapis.com/auth/contacts",
      "profile"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "iframe.html",
        "infoModel.html",
        "tabInfoModel.html",
        "auth.html",
        "subscription.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}
